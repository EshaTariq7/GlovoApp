<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Yellow Background Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FDC13B"> <!-- Yellow background -->

            <!-- Glovo Logo -->
            <TextView
                android:id="@+id/glovo_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Glovo"
                android:textColor="#008C71"
                android:textSize="28sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="20dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp" />
            <!-- Horizontal Layout for Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp">

                <!-- Profile Image -->
                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/loggo"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="@string/profile_icon" />

                <!-- Login Button -->
                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:background="@drawable/rounded_button"
                    android:textColor="#FFFFFF"

                    android:onClick="openLoginPage" />
            </LinearLayout>

            <!-- Image representing delivery -->
            <ImageView
                android:id="@+id/delivery_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@id/glovo_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:src="@drawable/burger" />


            <!-- Headline: Food delivery and more -->
            <TextView
                android:id="@+id/headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food delivery and more"
                android:textSize="30sp"
                android:textColor="#000000"
                android:layout_below="@id/delivery_image"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif" />

            <!-- Subline: Groceries, shops, pharmacies, anything -->
            <TextView
                android:id="@+id/subline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Groceries, shops, pharmacies, anything!"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_below="@id/headline"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif" />

            <!-- Address input field -->
            <EditText
                android:id="@+id/address_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="What's your address?"
                android:background="@android:drawable/editbox_background"
                android:layout_below="@id/subline"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"/>

            <!-- Location Button -->
            <Button
                android:id="@+id/location_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Use current location"
                android:background="@drawable/rounded_button"
                android:textColor="#FFFFFF"
                android:layout_below="@id/address_input"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="10dp" />

        </RelativeLayout>
        <!-- White Background Section for Images -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <!-- Delivery Image -->
            <ImageView
                android:id="@+id/anything_delivered_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/rest" />

            <ImageView
                android:id="@+id/anything_delivered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:adjustViewBounds="true"
                android:src="@drawable/snip" />

            <ImageView
                android:id="@+id/countriess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:adjustViewBounds="true"
                android:src="@drawable/cont" />
            <ImageView
                android:id="@+id/count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:adjustViewBounds="true"
                android:src="@drawable/cont1" />
            <ImageView
                android:id="@+id/countrie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:adjustViewBounds="true"
                android:src="@drawable/cont2" />

            <ImageView
                android:id="@+id/lets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:adjustViewBounds="true"
                android:src="@drawable/lets" />
            <ImageView
                android:id="@+id/ride"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:adjustViewBounds="true"
                android:src="@drawable/rider" />
            <ImageView
                android:id="@+id/partnerr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:adjustViewBounds="true"
                android:src="@drawable/part" />
            <ImageView
                android:id="@+id/career"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:adjustViewBounds="true"
                android:src="@drawable/career" />
            <ImageView
                android:id="@+id/footerr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:adjustViewBounds="true"
                android:src="@drawable/footer" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>




